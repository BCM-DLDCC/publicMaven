		</dependencies>
	</dependencyManagement>
	

	<version>1.5.1-SNAPSHOT</version>
	<description>Common utilities for the DLDCC Bioinformatics Grid projects based on EE6.</description>
	<scm>
		<url>svn://svn.dldcc.bcm.edu/svn/repo/common/trunk/common</url>
		<tag>HEAD</tag>
		<developerConnection>scm:svn:svn://svn.dldcc.bcm.edu:3690/common-repo</developerConnection>
	</scm>
	<parent>
